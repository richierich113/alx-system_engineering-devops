#!/usr/bin/env bash

# Update package lists to ensure we have the latest information
sudo apt-get update -y

# Install Nginx
sudo apt-get install -y nginx

# Create a new configuration file for redirection
sudo tee /etc/nginx/sites-available/redirect_me <<EOF
server {
    listen 80;
    listen [::]:80;

    server_name _;

    location /redirect_me {
        return 301 https://example.com/new_page;
    }

    location / {
        return 404;
    }
}
EOF

# Create a symbolic link to enable the new configuration
sudo ln -s /etc/nginx/sites-available/redirect_me /etc/nginx/sites-enabled/

# Test Nginx configuration
sudo nginx -t

# Restart Nginx
sudo service nginx restart

# Verify Nginx is running
nginx_status=$(curl -s -o /dev/null -w "%{http_code}" http://localhost/redirect_me)
if [ $nginx_status -eq 301 ]; then
    echo "Nginx is running and configured to redirect /redirect_me to another page with a 301 status code."
else
    echo "Failed to configure Nginx redirection."
fi
